@model IEnumerable<Entities.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="text-center">
    @Html.ActionLink("Create new Student", "Create", "StudentsTest", null, new { @class = "btn btn-outline-success" })

</div>

<table class="table">
    <thead>
        <tr>
            <th>Image</th> 
            <th> @Html.ActionLink("First Name", "AllStudents", "Students")</th>
            <th> @Html.ActionLink("Last Name", "AllStudents", "Students")</th>
            <th>Date of Birth</th>
            <th>e-mail</th>
            <th>Age</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td><img class="img-fluid" src="@Url.Content(student.PhotoUrl)" alt="Image" height="20" width="60" /> </td>
                <td> @Html.DisplayFor(x => student.FirstName)</td>
                <td>@Html.DisplayFor(x => student.LastName) </td>
                <td>@Html.DisplayFor(x => student.DateOfBirth, "{0:dd/MM/yyyy}", null) </td>
                <td>@Html.DisplayFor(x => student.Email) </td>
                <td>@Html.DisplayFor(x => student.Age) </td>
                <td class="text-center">
                    @Html.ActionLink("Details", "Details", "StudentsTest", new { id = student.StudentId }, new { @class = "btn btn-outline-success" })
                    @Html.ActionLink("Edit", "Edit", "StudentsTest", new { id = student.StudentId }, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Delete", "Delete", "StudentsTest", new { id = student.StudentId }, new { @class = "btn btn-outline-danger" })<br />
                </td>

            </tr>
        }
    </tbody>
</table>

