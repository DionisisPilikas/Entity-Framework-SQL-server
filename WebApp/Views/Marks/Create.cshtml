@model Entities.Mark

@{
    ViewBag.Title = "Create";
}


<h2>Create new Mark Per Student and Per Assignment</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    
<div class="text-center">
    <h4>Mark</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.AssignmentId,"choose Assignment")
        <div class="d-flex justify-content-center">
            @Html.DropDownList("AssignmentId")
            @Html.ValidationMessageFor(model => model.AssignmentId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StudentId,"choose Assignment")

        <div class="d-flex justify-content-center">
            @Html.DropDownList("StudentId")

            @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.MarkValue)
        <div class="d-flex justify-content-center">
            @Html.TextBoxFor(x => x.MarkValue, new { @placeholder = "Mark Value", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MarkValue, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        <div class="d-flex justify-content-center">
            <input type="submit" value="Create new Mark" class="btn btn-primary" />
        </div>
    </div>
    <div class="form-group">
        @Html.ActionLink("Back to List", "AllMarksPerAssignmentPerStudent", "Marks",null,new { @class = "btn btn-success" })
    </div>
</div>
}




