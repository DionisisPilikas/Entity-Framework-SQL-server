@model Entities.Student

@{
    ViewBag.Title = "Create";
}
<div class="text-center">
    <h2>Create Student</h2>
</div>

@using (Html.BeginForm("Create", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="text-center">
        @Html.AntiForgeryToken()


        <div class="d-flex justify-content-center">
            <p>
                choose Course<br />
                @Html.ListBox("AllCoursesIds", null, new { size = 7 })
            </p>
        </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">

        @Html.LabelFor(model => model.FirstName)<br />
        <div class="d-flex justify-content-center">
            @Html.TextBoxFor(x => x.FirstName, new { @placeholder = "First Name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.LastName)
        <div class="d-flex justify-content-center">
            @Html.TextBoxFor(x => x.LastName, new { @placeholder = "Last Name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.DateOfBirth)
        <div class="d-flex justify-content-center">
            @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
            @*@Html.TextBoxFor(m => m.DateOfBirth, "{0:dd/MM/yyyy}", new { @class = "datefield form-control", @placeholder = "Enter your Birth day" })*@
            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.PhotoUrl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="d-flex justify-content-center">
            <input type="file" name="ImageFile" value="browse" />
            @Html.ValidationMessageFor(model => model.PhotoUrl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="d-flex justify-content-center">
            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>

        

        <div class="d-flex justify-content-center">
            @Html.ActionLink("Back to List", "AllStudents", "Students", null, new { @class = "btn btn-primary" })
        </div>

    </div>
       
    }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        